rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Campaigns Collection
    match /campaigns/{campaignId} {
      // Allow public read access to active campaigns (for landing pages)
      allow read: if resource.data.status == 'active';

      // Allow authenticated contractors to read their own campaigns (any status)
      allow read: if isOwner(resource.data.contractorId);

      // Allow authenticated contractors to create campaigns for themselves
      allow create: if isAuthenticated()
                    && request.resource.data.contractorId == request.auth.uid;

      // Allow contractors to update/delete only their own campaigns
      allow update, delete: if isOwner(resource.data.contractorId);

      // Leads subcollection within campaigns
      match /leads/{leadId} {
        // Allow public write access (for lead form submissions)
        allow create: if true;

        // Allow contractors to read leads for their campaigns
        allow read: if isOwner(get(/databases/$(database)/documents/campaigns/$(campaignId)).data.contractorId);

        // Allow contractors to update/delete leads for their campaigns
        allow update, delete: if isOwner(get(/databases/$(database)/documents/campaigns/$(campaignId)).data.contractorId);
      }
    }

    // Contractors Collection (user profiles)
    match /contractors/{contractorId} {
      // Allow users to read/write only their own profile
      allow read, write: if isOwner(contractorId);
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
